<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./home.css" />
    <title>Document</title>
  </head>
  <body>
    <%if(user){ %>
    <div class="greetings">
      <div class="row1">
        <h2>Welcome Back ! <span><%=user.firstname%> </span></h2>
        <div class="linksGreetings">
          <a href="newMessage">Create A new Message !</a>
          <a href="/logout">Log Out</a>
          <%if(!user.ismember){%>
          <a href="becomeMember">Become a member</a>
          <%}%>
        </div>
      </div>
    </div>
    <div class="messages">
      <%if(messages){%>
      <ul class="message">
        <%for(let message of messages){%>
        <li>
          <div class="messageContainer">
            <%if(user.ismember){%>
            <h3><span><%=message.author%></span> Says :</h3>
            <%}else{%>
            <h3>Anonymous User Says :</h3>
            <%}%>
            <p><%=message.message%></p>
          </div>
        </li>
        <%}%>
      </ul>
      <%}%>
    </div>
    <%}else{%>
    <div class="nav">
      <h1>Room 124</h1>
      <div class="linksNav">
        <a href="login">Login</a> <a href="signup">Signup</a>
      </div>
    </div>
    <%}%>
  </body>
</html>
